<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.welltech.controller.OrderListController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search:" />
        <TextField fx:id="searchField" promptText="Search by order ID or username" HBox.hgrow="ALWAYS" />
        
        <Label text="Status:" />
        <ComboBox fx:id="statusFilter" prefWidth="150" />
        
        <Label text="Date Range:" />
        <DatePicker fx:id="startDate" promptText="Start Date" />
        <DatePicker fx:id="endDate" promptText="End Date" />
    </HBox>

    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="Order ID" prefWidth="100" />
            <TableColumn fx:id="userColumn" text="User" prefWidth="150" />
            <TableColumn fx:id="totalAmountColumn" text="Total Amount" prefWidth="120" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
            <TableColumn fx:id="paymentStatusColumn" text="Payment Status" prefWidth="120" />
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="200" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="createOrderButton" text="Create Order" onAction="#handleCreateOrder" />
        <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh" />
        <Button text="View Details" onAction="#handleViewDetails" />
        <Button text="Update Status" onAction="#handleUpdateStatus" />
        <Button text="Delete" onAction="#handleDelete" />
    </HBox>

</VBox> 