<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.welltech.controller.AdminReclamationController"
            prefWidth="800" prefHeight="600"
            stylesheets="@../css/style.css">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
                <Label text="🛠️ Gestion des Réclamations" styleClass="view-title"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filtrer par date :"/>
                <DatePicker fx:id="dateFilterPicker"/>
                <Button text="Appliquer Date"
                        onAction="#filtrerParDate"
                        styleClass="button button-outline"/>

                <CheckBox fx:id="filtrerSansReponse"
                          text="Afficher seulement sans réponse"
                          onAction="#appliquerFiltres"/>
            </HBox>
            <CheckBox fx:id="filtrerUrgent" onAction="#appliquerFiltres" text="Afficher Urgentes Seulement" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="listeReclamationsBox" spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label fx:id="noReclamationsMessage"
                       text="Aucune réclamation trouvée."
                       visible="false"
                       styleClass="no-reclamation-message"/>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="refreshButton"
                    text="🔄 Rafraîchir"
                    styleClass="button button-outline"/>
            <Button fx:id="homeButton"
                    text="🏠 Retour"
                    styleClass="button button-primary"/>
        </HBox>
    </bottom>
</BorderPane>
