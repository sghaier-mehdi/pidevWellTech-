{% extends 'back/base.html.twig' %}

{% block title %}Objective{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Objective</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ objective.id }}</td>
                </tr>
                <tr>
                    <th>Number of Consultations</th>
                    <td>{{ objective.nbrConsultation }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ objective.status }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('objective_index') }}" class="btn btn-secondary mt-3">Back to list</a>
        <a href="{{ path('objective_edit', {'id': objective.id}) }}" class="btn btn-primary mt-3">Edit</a>

        {{ include('objective/_delete_form.html.twig') }}
    </div>
{% endblock %}
