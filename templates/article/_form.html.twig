{{ form_start(form, {'attr': {'class': 'needs-validation custom-form', 'novalidate': 'novalidate', 'method': 'POST'}}) }}
    <div class="mb-3">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control' ~ (form.title.vars.valid ? '' : ' is-invalid')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control' ~ (form.content.vars.valid ? '' : ' is-invalid'), 'rows': 5}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.content) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.media, 'Fichier Média', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.media, {'attr': {'class': 'form-control' ~ (form.media.vars.valid ? '' : ' is-invalid')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.media) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.type, 'Type de Média', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.type, {'attr': {'class': 'form-select' ~ (form.type.vars.valid ? '' : ' is-invalid')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.type) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.tags, 'Tags', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.tags, {'attr': {'class': 'form-control' ~ (form.tags.vars.valid ? '' : ' is-invalid')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.tags) }}
        </div>
    </div>

    {# Remove the explicit button #}
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
    </button> 

{{ form_end(form) }}
<style>
    .custom-form {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
    .custom-form h3 {
        color: #007bff;
        font-weight: bold;
    }
    .custom-form .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
    }
    .custom-form button {
        border-radius: 5px;
        padding: 10px 20px;
    }
    .custom-form .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
    .custom-form .btn-success:hover {
        background-color: #218838;
    }
    .custom-form .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>