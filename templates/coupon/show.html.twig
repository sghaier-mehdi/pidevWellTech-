{% extends 'back/base.html.twig' %}

{% block title %}Coupon{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Coupon</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ coupon.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ coupon.name }}</td>
                </tr>
                <tr>
                    <th>Discount Percentage</th>
                    <td>{{ coupon.discountPercentage }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ coupon.code }}</td>
                </tr>
                <tr>
                    <th>Is Active</th>
                    <td>{{ coupon.isActive ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Expiration Date</th>
                    <td>{{ coupon.expirationDate ? coupon.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Usage Count</th>
                    <td>{{ coupon.usageCount }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_coupon_index') }}" class="btn btn-secondary mt-3">Back to list</a>
        <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}" class="btn btn-primary mt-3">Edit</a>

        {{ include('coupon/_delete_form.html.twig') }}
    </div>
{% endblock %}
