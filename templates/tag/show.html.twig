{% extends 'back/base.html.twig' %}

{% block title %}Tag Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center fw-bold mb-4 text-success"><i class="fas fa-tag"></i> Tag Details</h1>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <table class="table table-bordered text-center">
                <tbody>
                    <tr>
                        <th class="bg-light text-dark">ID</th>
                        <td class="fw-bold">{{ tag.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Name</th>
                        <td class="fw-bold">{{ tag.name }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="{{ path('app_tag_index') }}" class="btn btn-outline-success rounded-pill px-4">
                    <i class="fas fa-list"></i> Back to List
                </a>
                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-edit"></i> Edit
                </a>
                {{ include('tag/_delete_form.html.twig', { 'class': 'd-inline' }) }}
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 12px;
    }
    .card:hover {
        transform: scale(1.02);
        box-shadow: 0px 6px 25px rgba(114, 196, 114, 0.4);
    }
    .table {
        border-radius: 12px;
        overflow: hidden;
    }
</style>

{% endblock %}
