{% extends 'front/base.html.twig' %}

{% block title %}Coupons and Objectives{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Coupons and Objectives</h1>

        <h2>Coupons</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Discount Percentage</th>
                    <th>Code</th>
                    <th>Is Active</th>
                    <th>Expiration Date</th>
                    <th>Usage Count</th>
                </tr>
            </thead>
            <tbody>
            {% for coupon in coupons %}
                <tr>
                    <td>{{ coupon.id }}</td>
                    <td>{{ coupon.name }}</td>
                    <td>{{ coupon.discountPercentage }}</td>
                    <td>{{ coupon.code }}</td>
                    <td>{{ coupon.isActive ? 'Yes' : 'No' }}</td>
                    <td>{{ coupon.expirationDate ? coupon.expirationDate|date('Y-m-d') : 'N/A' }}</td>
                    <td>{{ coupon.usageCount }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No coupons found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h2>Objectives</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Number of Consultations</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            {% for objective in objectives %}
                <tr>
                    <td>{{ objective.id }}</td>
                    <td>{{ objective.nbrConsultation }}</td>
                    <td>{{ objective.status }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No objectives found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}